<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:layout_gravity="center"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Đăng nhập"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/dangnhap"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp5"
            android:background="@color/dangnhap"
            android:layout_width="120dp"
            android:layout_height="1dp"/>
    </LinearLayout>

    <ImageView
        android:src="@drawable/icon_login"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:inputType="text"
            android:hint="User name"
            android:textColorHint="@color/black_alpha_70p"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/custom_edittext_background_login"
            android:layout_marginVertical="@dimen/dp5"
            android:layout_width="230dp"
            android:layout_height="40dp"/>

        <EditText
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/custom_background_edittext_password_login"
            android:layout_marginVertical="@dimen/dp10"
            android:layout_width="230dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:id="@+id/btnLogin"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_background_button_login"
            android:layout_width="160dp"
            android:layout_height="40dp">
            <TextView
                android:text="Đăng nhập"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/titleTabColor"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>